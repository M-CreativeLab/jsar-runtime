{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "nodejs-patch",
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "paths": {
      "@transmute/*": ["./lib/bindings/*"],
    },
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
  ],
}