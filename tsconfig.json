{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}